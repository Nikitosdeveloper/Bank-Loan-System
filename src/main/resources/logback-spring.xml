<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="AUTH_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/auth-controller.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %-5level - %msg%n</pattern>
        </encoder>
        <append>true</append>
    </appender>

    <appender name="OTHER_LOGS" class="ch.qos.logback.core.FileAppender">
        <file>logs/other.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %-5level - %msg%n</pattern>
        </encoder>
        <append>false</append>
    </appender>

    <appender name="STARTUP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.busir.gardarian.bankloansystem.dao.controllers.AuthController" level="DEBUG" additivity="false">
        <appender-ref ref="AUTH_FILE"/>
    </logger>

    <logger name="com.busir.gardarian.bankloansystem.BankLoanSystemApplication" level="INFO" additivity="false">
        <appender-ref ref="STARTUP_CONSOLE"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="OTHER_LOGS"/>
    </root>
</configuration>